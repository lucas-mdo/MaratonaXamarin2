<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaratonaApp.Views.LoginPage"
             Title="{Binding Title}">
    <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
        <Label Text="Maratona Xamarin Intermediária" TextColor="Black" FontSize="Medium"/>
        <Button Command="{Binding LoginCommand}" Text="Login with Facebook" BackgroundColor="CornflowerBlue" FontSize="Medium" TextColor="White"/>
    </StackLayout>
</ContentPage>